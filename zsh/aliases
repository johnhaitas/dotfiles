#alias ls='ls --color=auto'

if [ -f /usr/local/mysql/bin/mysql ]; then alias mysql=/usr/local/mysql/bin/mysql; fi
if [ -f /usr/local/mysql/bin/mysqladmin ]; then alias mysqladmin=/usr/local/mysql/bin/mysqladmin; fi

if command -v gcloud > /dev/null 2>&1; then alias gc=gcloud; fi
if command -v kubectl > /dev/null 2>&1; then alias kc=kubectl; fi

if [ -f /Applications/kdiff3.app/Contents/MacOS/kdiff3 ]; then alias kdiff3=/Applications/kdiff3.app/Contents/MacOS/kdiff3; fi

if [ -d /Applications/SourceTree.app ]; then alias sourcetree='open -a SourceTree'; fi

alias google-chrome-debug='google-chrome --remote-debugging-port=9222'
alias chromium-debug='chromium --remote-debugging-port=9222'

alias sleepless="pmset -g assertions | egrep '(PreventUserIdleSystemSleep|PreventUserIdleDisplaySleep)'"
